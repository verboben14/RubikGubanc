<Window x:Class="RubikGubanc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Üdvözlöm a Rubik Gubanc megoldóban!" Height="350" Width="525" WindowStartupLocation="CenterScreen" Background="LightBlue">
    <Grid>
        <Label Content="Üdvözöljük!" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" FontSize="30" FontWeight="Bold" FontFamily="Showcard Gothic" Foreground="Tomato"/>
        <Button Content="Játék" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Width="100" Height="35" FontSize="20" FontFamily="Algerian" Click="GameClick"/>
        <Button Content="Leírás" HorizontalAlignment="Center" Margin="0,185,0,0" VerticalAlignment="Top" Width="100" Height="35" FontSize="20" FontFamily="Algerian" Click="RulesClick"/>
        <Button Content="Kilépés" HorizontalAlignment="Center" Margin="0,230,0,0" VerticalAlignment="Top" Width="100" Height="35" FontSize="20" FontFamily="Algerian" Click="QuitClick" IsCancel="True"/>

    </Grid>
</Window>
